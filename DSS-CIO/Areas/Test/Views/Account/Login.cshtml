@{
    Layout = null;
    bool isValidate = true;
    bool fromRegister = Session["FromRegister"] != null;
    if (@ViewBag.IsLogin != null && (bool)@ViewBag.IsLogin == false)
    {
        isValidate = false;
    }
    Session["FromRegister"] = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <!-- Bootstrap -->
    <link href="~/Areas/Test/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Areas/Test/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="~/Areas/Test/css/custom.css" rel="stylesheet">

    <link href="~/Areas/Test/Slider/js-image-slider.css" rel="stylesheet" type="text/css" />
    <script src="~/Areas/Test/Slider/js-image-slider.js" type="text/javascript"></script>

</head>
<body style="background:#F7F7F7;">
    @if(!isValidate) { 
    <div class="alert alert-danger alert-dismissible fade in" role="alert">
        
        <strong>Username and password incorrect please try again!</strong> 
    </div>
    }

    @if (fromRegister)
    {
        
        <div class="alert alert-success alert-dismissible fade in" role="alert">

            <strong>User Creation Successful Please Re Login!</strong>
        </div>
    }
    <div style="width:100%; margin-top:50px; text-align:center"><h1>Projects and Payroll System</h1></div>
    <div style="width:100%; height:50px">&nbsp;</div>
    <div id="sliderFrame">
        <div id="slider">

            <img src="~/Areas/Test/Slider/images/1.jpg" />
            <img src="~/Areas/Test/Slider/images/2.jpg" />
            <img src="~/Areas/Test/Slider/images/3.jpg" />
            <img src="~/Areas/Test/Slider/images/4.jpg" />
            <img src="~/Areas/Test/Slider/images/5.jpg" />
        </div>
        <div id="htmlcaption" style="display: none;">
            <em>HTML</em> caption. Link to <a href="http://www.google.com/">Google</a>.
        </div>
    </div>

    <div class="">
        <a class="hiddenanchor" id="toregister"></a>
        <a class="hiddenanchor" id="tologin"></a>
        <div id="wrapper">
           
            <div id="login" class="form">
                <section class="login_content">
                    <form method="post">
                        <h1>Login</h1>
                        <div>
                            <input type="text" class="form-control" name="username" placeholder="Username" required/>
                        </div>
                        <div>
                            <input type="password" class="form-control" name="password" placeholder="Password" required />
                        </div>
                        <div>
                            <input type="submit" class="btn btn-default submit" value="Login"/>
                           
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <p class="change_link">
                                New to site?
                                <a href="@Url.Action("Register")" class="to_register"> Sign Up </a>
                            </p>
                            <div class="clearfix"></div>
                            <br />
                          
                        </div>
                    </form>
                </section>
            </div>
         </div>
    </div>
</body>
</html>
