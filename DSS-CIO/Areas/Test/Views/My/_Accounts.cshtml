
@model DSSCIO.Areas.Test.Models.ProjectModel



<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">

        <div class="x_content">
            <div id="accounts" style="height:250px;"></div>
        </div>
    </div>
</div>

<div class="clearfix"></div>


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="x_content">
                <table id="datatable2122" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>


                            <th>City</th>

                            <th>Detail</th>
                        </tr>
                    </thead>

                </table>

            </div>
        </div>
    </div>

</div>

<script type="text/javascript">

    $(document).ready(function () {
        $('#accounts-tab').on('shown.bs.tab', function () {
            if (!$.fn.DataTable.isDataTable('#datatable2122')) {
                $('#datatable2122').dataTable({
                    "ajax": "@Url.Action("GetAccountsList", "My")"
                });
            }

            var accounts = echarts.init(document.getElementById('accounts'), theme);

            accounts.setOption({
                tooltip: {
                    trigger: 'item',
                    formatter: "{a} <br/>{b} : {c} ({d}%)"
                },
                legend: {
                    x: 'center',
                    y: 'bottom',
                    data: ['Patrol',"Parking Maintinace","Others"]
                },

                calculable: true,
                series: [{
                    name: 'accounts',
                    type: 'pie',
                    radius: '55%',
                    center: ['50%', '48%'],
                    data: [{
                        value: 45000,
                        name: 'Patrol'
                    }, {
                        value: 600000,
                        name: 'Parking Maintinace'
                    }, {
                        value: 20000,
                        name: 'Others'
                    }
                    ]
                }]
            });
        });
    });

</script>
