@model DSSCIO.Areas.Test.Models.ProjectEmployee
@{
    ViewBag.Title = "Project Employeement Detail";
    string projectId = Request["ProjectId"];
}

<h2>Project Employeement Detail</h2>


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
           
            <div class="x_content">
                <br>
                <form id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" method="post" novalidate="" action="@Url.Action("ProjectEmployeementDetail")">

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            Employee <span class="required">*</span>
                        </label>
                       <div class="col-md-6 col-sm-6 col-xs-12">
                         @Html.DropDownList("CNIC", (IEnumerable<SelectListItem>)ViewBag.employee, new {@class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            Role <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" name="Role" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                            Performance <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" id="last-name" name="performance" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>
           
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            Appoinment Date <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="birthday" name="AppointmentDate" class="date-picker form-control col-md-7 col-xs-12" required="required" type="text">
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="@Url.Action("ProjectDetail", new {id = projectId })" class="btn btn-primary">Cancel</a>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>
                    <input type="hidden" name="ProjectId" value="@projectId" />
                </form>
            </div>
          
        </div>
    </div>
</div>

    <!-- bootstrap-daterangepicker -->
<script src="~/Areas/Test/js/moment/moment.min.js"></script>
<script src="~/Areas/Test/js/datepicker/daterangepicker.js"></script>
<script src="~/Areas/Test/vendors/parsleyjs/dist/parsley.min.js"></script>
<script>
      $(document).ready(function() {
        $('#birthday').daterangepicker({
          singleDatePicker: true,
          calender_style: "picker_4"
        }, function(start, end, label) {
          console.log(start.toISOString(), end.toISOString(), label);
        });
      });
</script>