@model DSSCIO.Areas.Test.Models.ProjectResources

@{
    ViewBag.Title = "ProjectResourcesDetail";
    string projectId = Request["ProjectId"];
}


<h2>Project Resource Detail</h2>


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="x_content">
                <br>
                <form id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="" method="post" action="@Url.Action("ProjectResourcesDetail")">
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            Resource <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownList("ResourceId", (IEnumerable<SelectListItem>)ViewBag.employee, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            Status <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" name="Status" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                            Assignment Date <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="birthday1" name="AppoinmentDate" class="date-picker form-control col-md-7 col-xs-12" required="required" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            Expected Return Date <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="birthday2" name="ExpectedReturnDate" class="date-picker form-control col-md-7 col-xs-12" required="required" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            Actual Return Date <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="birthday3" name="ActualReturnDate" class="date-picker form-control col-md-7 col-xs-12" required="required" type="text">
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="@Url.Action("ProjectDetail", new {id = projectId })" class="btn btn-primary cancel">Cancel</a>
                            <button type="submit" class="btn btn-success">Submit</button>
                           
                        </div>
                    </div>
                    <input type="hidden" name="ProjectId" value="@projectId" />
                </form>
            </div>
            
        </div>
    </div>
</div>

<!-- bootstrap-daterangepicker -->
<script src="~/Areas/Test/js/moment/moment.min.js"></script>
<script src="~/Areas/Test/js/datepicker/daterangepicker.js"></script>
<script src="~/Areas/Test/vendors/parsleyjs/dist/parsley.min.js"></script>
<script>
      $(document).ready(function() {
          $('#birthday1,#birthday2,#birthday3').daterangepicker({
          singleDatePicker: true,
          calender_style: "picker_4"
        }, function(start, end, label) {
          console.log(start.toISOString(), end.toISOString(), label);
        });
      });
</script>